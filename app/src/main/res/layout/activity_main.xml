<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/app_name"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_easy"
        style="@style/StyleSettingLevel"
        android:layout_marginBottom="32dp"
        android:text="@string/level_easy"
        android:background="@color/easyLevel"
        app:layout_constraintBottom_toTopOf="@+id/button_medium"
        app:layout_constraintStart_toStartOf="@+id/button_medium" />

    <Button
        android:id="@+id/button_medium"
        style="@style/StyleSettingLevel"
        android:layout_marginBottom="32dp"
        android:text="@string/level_medium"
        android:background="@color/mediumLevel"
        app:layout_constraintBottom_toTopOf="@+id/button_hard"
        app:layout_constraintStart_toStartOf="@+id/button_hard"
        android:onClick= "onLevelButtonClicked"/>

    <Button
        android:id="@+id/button_hard"
        style="@style/StyleSettingLevel"
        android:layout_marginBottom="60dp"
        android:text="@string/level_hard"
        android:background="@color/hardLevel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick= "onLevelButtonClicked"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="@string/choose_level"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_easy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>